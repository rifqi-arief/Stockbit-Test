<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_watchlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="BTC"
        android:textColor="@color/greyscale_600"
        android:textSize="@dimen/component_big"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/component_sizeable"
        android:layout_marginStart="@dimen/component_sizeable"/>

    <TextView
        android:id="@+id/tv_watchlist_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Bitcoin"
        android:textColor="@color/greyscale_400"
        android:textSize="@dimen/component_sizeable"
        app:layout_constraintTop_toBottomOf="@id/tv_watchlist_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/component_tiny"
        android:layout_marginStart="@dimen/component_sizeable"/>

    <TextView
        android:id="@+id/tv_watchlist_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="$ 100"
        android:textColor="@color/greyscale_600"
        android:textSize="@dimen/component_big"
        app:layout_constraintTop_toTopOf="@id/tv_watchlist_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_watchlist_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/component_sizeable"/>

    <TextView
        android:id="@+id/tv_watchlist_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0 (0)"
        android:textColor="@color/greyscale_400"
        android:textSize="@dimen/component_sizeable"
        app:layout_constraintTop_toBottomOf="@id/tv_watchlist_price"
        app:layout_constraintEnd_toEndOf="@id/tv_watchlist_price"
        android:layout_marginTop="@dimen/component_tiny"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greyscale_200"
        app:layout_constraintTop_toBottomOf="@id/tv_watchlist_fullname"
        android:layout_marginTop="@dimen/component_sizeable"/>

</androidx.constraintlayout.widget.ConstraintLayout>